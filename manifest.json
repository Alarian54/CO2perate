{
    "name": "Cotu",
    "short_name": "Cotu",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "description": "Displays the carbon cost of your Amazon purchases",
    "icons": {
        "16": "cotu_16.png",
        "48": "cotu_48.png",
        "128": "cotu_128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Cotu",
        "default_icon": "cotu_128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage", "activeTab"]
}
