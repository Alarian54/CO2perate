{
    "name": "CO2perate",
    "short_name": "CO2perate",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "description": "Displays the carbon cost of your Amazon purchases",
    "icons": {
        "16": "co2perate_16.png",
        "48": "co2perate_48.png",
        "128": "co2perate_128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "CO2perate",
        "default_icon": "favicon&logo.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage", "activeTab"]
}